<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue1</item>
        <item name="colorPrimaryDark">@color/blue2</item>
        <item name="colorAccent">@color/white</item>
    </style>


    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicator">@drawable/tab_layout_indicator</item>
        <item name="tabIndicatorGravity">top</item>
        <item name="tabIndicatorHeight">10dp</item>
        <item name= "tabBackground">@color/blue1</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="android:textColor">#E30000</item>

    </style>

    <style name="AppTheme.ThemeOverlay" parent = "ThemeOverlay.AppCompat.Dark" />

    <style name="NavigationTheme" parent="AppTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>
</resources>